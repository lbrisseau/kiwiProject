{% extends 'admin-base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-10 mx-auto">
        <div class="d-flex  my-4">
          <h1 class="h2">DÃ©tail Entrainement du
            {{ event.date ? event.date|date('d-m-Y') : '' }}
          </h1>
          <p class="ml-auto">
            <a class="btn btn-primary" href="{{ path('event_index') }}">
              <i class="fas fa-arrow-circle-left"></i>
            </a>
            <a class="btn btn-warning" href="{{ path('event_edit', {'id': event.id}) }}">
              <i class="far fa-edit"></i>
            </a>
          </p>
        </div>
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>Id</th>
              <td>{{ event.id }}</td>
            </tr>
            <tr>
              <th>Date</th>
              <td>{{ event.date ? event.date|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
              <th>Nom</th>
              <td>{{ event.name }}</td>
            </tr>
            <tr>
              <th>Entrainement Adulte ?</th>
              <td>{{ event.type ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
              <th>Inscription Membres</th>
              <td>{{ event.startMemberSubs }} jours avant la session</td>
            </tr>
            <tr>
              <th>Inscription (autres)</th>
              <td>{{ event.startAllSubs }} jours avant la session</td>
            </tr>
            <tr>
              <th>Fermeture Inscriptions</th>
              <td>{{ event.endSubs }} jours avant la session</td>
            </tr>
          </tbody>
        </table>
        {{ include('event/_delete_form.html.twig') }}
      </div>
    </div>
  </div>

{% endblock %}
