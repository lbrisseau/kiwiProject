{% extends 'admin-base.html.twig' %}

{% block title %}MX Park | Admin | Membres{% endblock %}

{% block body %}
    <div class="row">
      <div class="col-10 offset-1">
        <h1>Liste des membres</h1>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Id</th>
              <th>Email</th>
              <th>Roles</th>
              <th>FirstName</th>
              <th>LastName</th>
              <th>BirthDate</th>
              <th>Phone</th>
              <th>LicenceNumber</th>
              <th>actions</th>
            </tr>
          </thead>
          <tbody>
            {% for user in users %}
              <tr>
                <td>{{ user.id }}</td>
                <td><p class="text-break">{{ user.email }}</p></td>
                <td><p class="text-break">{{ user.roles ? user.roles|json_encode : '' }}</p></td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.licenceNumber }}</td>
                <td>
                  <a href="{{ path('admin_user_show', {'id': user.id}) }}">show</a>
                  <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="10">no records found</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        <a href="{{ path('admin_user_new') }}">Create new</a>
      </div>
    </div>

{% endblock %}
